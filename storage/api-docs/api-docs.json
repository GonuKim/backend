    "paths": {
        "/api/register": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "회원가입",
                "description": "회원을 등록\n   *     따로 access token을 발급해 주지 않으므로 로그인창으로 넘어가게 구현하시면 됩니다.",
                "operationId": "8a56853624e025573120a09a4c75d468",
                "requestBody": {
                    "description": "회원 정보",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "nickname": {
                                        "description": "회원 닉네임",
                                        "type": "string",
                                        "example": "testuser1"
                                    },
                                    "name": {
                                        "description": "회원 아이디",
                                        "type": "string",
                                        "example": "test1"
                                    },
                                    "email": {
                                        "description": "회원 이메일",
                                        "type": "email",
                                        "example": "testuser@naver.com"
                                    },
                                    "password": {
                                        "description": "회원 비밀번호",
                                        "type": "string",
                                        "example": "asdf1234"
                                    },
                                    "password_confirmation": {
                                        "description": "회원 비밀번호 확인",
                                        "type": "string",
                                        "example": "asdf1234"
                                    },
                                    "phone": {
                                        "description": "회원 전화번호",
                                        "type": "string",
                                        "example": "01012345678"
                                    },
                                    "birthday": {
                                        "description": "회원 생일",
                                        "type": "string",
                                        "format": "date",
                                        "example": "01/01/2000"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "400": {
                        "description": "Fail"
                    }
                }
            }
        },
        "/api/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "로그인",
                "description": "회원 로그인\n   *     Access token 과 refresh token을 반환해주므로 적당히 저장해둔 후 각 요청의 Header부분에 넣어서 사용하시면 됩니다.",
                "operationId": "a3b306d14572d1f4bd6c064b3233e7b8",
                "requestBody": {
                    "description": "로그인 정보",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "name": {
                                        "description": "회원 아이디",
                                        "type": "string",
                                        "example": "test1"
                                    },
                                    "password": {
                                        "description": "회원 비밀번호",
                                        "type": "string",
                                        "example": "asdf1234"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "400": {
                        "description": "Fail"
                    }
                }
            }
        },
        "/api/logout": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "로그아웃",
                "description": "회원 로그아웃\n   *     로그아웃 시 해당 로그인 유저와 관련된 토큰이 모두 삭제되므로 가지고 있는 Access token과 refresh token은 폐기하시면 됩니다.",
                "operationId": "fe8f3429cd6979b3b4517e186505f9f9",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "description": "Bearer {access_token}",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "400": {
                        "description": "Fail"
                    }
                }
            }
        },
        "/api/refresh": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "ACCESS_TOKEN 재발급",
                "description": "회원 ACCESS_TOKEN 재발급\n   *     회원의 Access token이 만료되었을 경우 refresh token을 헤더에 담아 보내면 새로운 Access token이 발급됩니다.\n   *     front 측에서는 발급된 Access token을 저장해두면 됩니다.",
                "operationId": "848bfa513130bb2967e5f08edc75ee1e",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "description": "Bearer {refresh_token}",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "400": {
                        "description": "Fail"
                    }
                }
            }
        },
        "/api/sign-out": {
            "delete": {
                "tags": [
                    "Auth"
                ],
                "summary": "회원 탈퇴",
                "description": "회원 탈퇴\n   *     로그인 된 유저와 같은 회원정보를 삭제합니다.",
                "operationId": "4e82c795519f2284b6d86ac5d4c3d58f",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "description": "Bearer {access_token}",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "400": {
                        "description": "Fail"
                    }
                }
            }
        },
        "/api/user": {
            "get": {
                "tags": [
                    "Auth"
                ],
                "summary": "회원 정보",
                "description": "회원 정보\n   *     로그인 된 유저와 같은 회원정보를 반환합니다.",
                "operationId": "7c1cf647d76fad4b3eb1549fa4fe2f4c",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "description": "Bearer {access_token}",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "400": {
                        "description": "Fail"
                    }
                }
            }
        },
        "/api/image/translate": {
            "post": {
                "tags": [
                    "ImageOCR"
                ],
                "summary": "이미지를 텍스트로 변환 후 번역",
                "description": "이미지를 텍스트로 변환 후 번역 반환된 sourceTextArray는 원문 텍스트 targetTextArray는 번역된 텍스트입니다.",
                "operationId": "146f73ccacb9c4e5af6b9ecd564fb3ad",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "description": "Bearer access token",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "description": "이미지",
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "properties": {
                                    "image": {
                                        "type": "file"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "400": {
                        "description": "Fail"
                    }
                }
            }
        },
        "/api/social/{provider}": {
            "post": {
                "tags": [
                    "SocialAuth"
                ],
                "summary": "소셜 로그인",
                "description": "소셜 회원 로그인",
                "operationId": "2908732faeffbdc261632ef4f48a55e6",
                "parameters": [
                    {
                        "name": "provider",
                        "in": "path",
                        "description": "kakao, google, naver, github 중 하나의 provider",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "400": {
                        "description": "Fail"
                    }
                }
            }
        },
        "/api/vocabularyNote/export": {
            "post": {
                "tags": [
                    "VocabularyNote"
                ],
                "summary": "Excel 단어장 생성",
                "description": "Excel 단어장 생성",
                "operationId": "a87a3696655bb943a9d8c2b9de14d9e5",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "description": "Bearer {access_token}",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "description": "단어장 정보",
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "properties": {
                                    "excel": {
                                        "description": "Excel 파일",
                                        "type": "file"
                                    },
                                    "title": {
                                        "description": "단어장 제목",
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "400": {
                        "description": "Fail"
                    }
