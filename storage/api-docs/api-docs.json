{
    "openapi": "3.0.2",
    "info": {
        "title": "Laravel",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http:\/\/localhost"
        }
    ],
    "paths": {
        "\/api\/register": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "회원가입",
                "description": "회원의 닉네임,이름,비밀번호,비밀번호 확인 <br\/>\n전화번호, 생일, 역할을 입력받아 <br\/>\n유효성 검사를 진행하고 통과 시 회원가입 절차를 진행합니다. <br\/>\nrole 부분을 제외한 모든 데이터는 필수요소입니다.<br\/>\nmanager, admin은 role 부분에 Manager, Admin 데이터를 기입해 주셔야 합니다. <br\/>\n일반 사용자의 경우 role 부분을 보내지 않아도 default로 User 값이 들어가게 됩니다. <br\/>",
                "requestBody": {
                    "description": "회원가입",
                    "content": {
                        "application\/json": {
                            "schema": {
                                "$ref": "#\/components\/schemas\/"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "$ref": "#\/components\/responses\/App\\OpenApi\\Responses\\UserResponse"
                    },
                    "403": {
                        "$ref": "#\/components\/responses\/ErrorValidation"
                    }
                }
            }
        },
        "\/api\/login": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "로그인",
                "description": "회원의 이메일과 비밀번호를 검사하고, 로그인 합니다. <br\/>\n로그인 시 AccessToken 과 RefreshToken을 발급해 주며 <br\/>\nAccessToken은 API요청을, RefreshToken은 AccessToken을 재발급 할 때 사용합니다. <br\/>",
                "requestBody": {
                    "description": "로그인",
                    "content": {
                        "application\/json": {
                            "schema": {
                                "$ref": "#\/components\/schemas\/"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "$ref": "#\/components\/responses\/App\\OpenApi\\Responses\\LoginResponse"
                    },
                    "403": {
                        "$ref": "#\/components\/responses\/ErrorValidation"
                    }
                }
            }
        },
        "\/api\/logout": {
            "delete": {
                "tags": [
                    "User"
                ],
                "summary": "로그아웃",
                "description": "회원의 로그아웃을 진행합니다. <br\/>\n로그인 된 유저와 같은 회원정보를 삭제합니다.",
                "parameters": [
                    {
                        "name": "AccessToken",
                        "in": "header",
                        "description": "Access Token",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "Bearer {access_token}"
                    }
                ],
                "responses": {
                    "default": {
                        "description": "로그아웃",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status_code": {
                                            "type": "integer",
                                            "example": 200
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "로그아웃 성공"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "": {
                "type": "object",
                "required": [
                    "nickname",
                    "email",
                    "password",
                    "password_confirmation",
                    "phone",
                    "birthday"
                ],
                "properties": {
                    "nickname": {
                        "title": "유저 닉네임",
                        "type": "string",
                        "example": "testUser"
                    },
                    "email": {
                        "title": "유저 이메일",
                        "type": "string",
                        "example": "testuser123@naver.com"
                    },
                    "password": {
                        "title": "유저 비밀번호",
                        "type": "string",
                        "example": "password123"
                    },
                    "password_confirmation": {
                        "title": "유저 비밀번호 확인",
                        "type": "string",
                        "example": "password123"
                    },
                    "phone": {
                        "title": "유저 전화번호",
                        "type": "string",
                        "example": "01012345678"
                    },
                    "birthday": {
                        "title": "유저 생년월일",
                        "type": "string",
                        "example": "1999-01-01"
                    },
                    "role": {
                        "title": "유저 역할",
                        "type": "string",
                        "example": "manager"
                    }
                }
            }
        },
        "responses": {
            "App\\OpenApi\\Responses\\LoginResponse": {
                "description": "로그인",
                "content": {
                    "application\/json": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "status_code": {
                                    "type": "integer",
                                    "example": 200
                                },
                                "message": {
                                    "type": "string",
                                    "example": "로그인 성공"
                                }
                            }
                        }
                    }
                }
            },
            "ErrorValidation": {
                "description": "유효성 검사 실패",
                "content": {
                    "application\/json": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "status_code": {
                                    "type": "integer",
                                    "example": 403
                                },
                                "message": {
                                    "type": "string",
                                    "example": "ErrorValidation"
                                },
                                "errors": {
                                    "type": "object",
                                    "additionalProperties": {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        }
                                    },
                                    "example": {
                                        "field": [
                                            "Something is wrong with this field"
                                        ]
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "App\\OpenApi\\Responses\\UserResponse": {
                "description": "회원가입 성공",
                "content": {
                    "application\/json": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "status_code": {
                                    "type": "integer",
                                    "example": 200
                                },
                                "message": {
                                    "type": "string",
                                    "example": "회원가입 성공"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "User",
            "description": "User 관련 API 입니다"
        },
        {
            "name": "last-tag",
            "description": "마지막 태그를 달아보았습니다."
        }
    ]
}
